    shadowColor: '#000',
    shadowOffset: { width: 0, height: 2 },
    shadowOpacity: 0.1,
    shadowRadius: 4,
    elevation: 3,
  },
  combinedCard: {
    backgroundColor: '#FFFFFF', // White background for the card
    borderRadius: 16, // Rounded corners
    padding: 16, // Padding inside the card
    marginHorizontal: 20, // Margin on the sides
    marginVertical: 20, // Margin top and bottom
    shadowColor: '#000', // Shadow for depth
    shadowOffset: { width: 0, height: 2 },
    shadowOpacity: 0.1,
    shadowRadius: 4,
    elevation: 3,
  },
  feeContainer: {
    flexDirection: 'row',
    justifyContent: 'space-between',
    marginBottom: 20, // Space between fee cards and pie chart
  },
  feeCard: {
    backgroundColor: '#F5F5F5', // Light gray background for fee cards
    padding: 12,
    borderRadius: 8,
    width: '30%', // Equal width for all fee cards
    alignItems: 'center',
  },
